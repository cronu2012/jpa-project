DROP TABLE EMPLOYEE;
DROP SEQUENCE SEQ_EMPLOYEE;

CREATE SEQUENCE SEQ_EMPLOYEE_ID
    START WITH 1
    INCREMENT BY 1
    NOCACHE
    NOCYCLE;

CREATE TABLE EMPLOYEE (
    EMPLOYEE_ID NUMBER(10) PRIMARY KEY,
    EMPLOYEE_NO VARCHAR2(8) UNIQUE,
    EMPLOYEE_NAME VARCHAR2(20),
    EMPLOYEE_EMAIL VARCHAR2(50),
    SYSTEM_PASSWORD VARCHAR2(20),
    GRADE VARCHAR2(1),
    DEPARTMENT VARCHAR2(3),
    BRANCH VARCHAR2(3),
    BIRTH_DATE VARCHAR2(8),
    HIRE_DATE VARCHAR2(8),
    SALARY_YEAR NUMBER(10,2),
    LAST_MODIFY_TIME TIMESTAMP WITH TIME ZONE
);

-- 添加表格註釋
COMMENT ON TABLE EMPLOYEE IS '員工表格';

-- 添加欄位註釋
COMMENT ON COLUMN EMPLOYEE.EMPLOYEE_ID IS '員工ID';
COMMENT ON COLUMN EMPLOYEE.EMPLOYEE_NO IS '員工編號';
COMMENT ON COLUMN EMPLOYEE.EMPLOYEE_NAME IS '員工姓名';
COMMENT ON COLUMN EMPLOYEE.EMPLOYEE_EMAIL IS '員工電子信箱';
COMMENT ON COLUMN EMPLOYEE.SYSTEN_PASSWORD IS '系統密碼';
COMMENT ON COLUMN EMPLOYEE.GRADE IS '職等';
COMMENT ON COLUMN EMPLOYEE.DEPARTMENT IS '部門';
COMMENT ON COLUMN EMPLOYEE.BRANCH IS '分公司';
COMMENT ON COLUMN EMPLOYEE.BIRTH_DATE IS '出生日';
COMMENT ON COLUMN EMPLOYEE.HIRE_DATE IS '雇用日期';
COMMENT ON COLUMN EMPLOYEE.SALARY_YEAR IS '年薪';
COMMENT ON COLUMN EMPLOYEE.LAST_MODIFY_TIME IS '最後修改時間';
